@model Lab3_test3.Models.NameLoopFormModel

@{ ViewData["Title"] = "Imię-Pętla"; }

<h1 class="display-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="NameLoop" asp-action="Loop" method="post">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoopAmount" class="control-label"></label>
                <select asp-for="LoopAmount">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="LoopAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapętlij Imię" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

